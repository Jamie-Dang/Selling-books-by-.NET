@using Books.Data;
@using Microsoft.AspNetCore.Identity
@using Books.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-action="Logout" asp-controller="User" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-action="Register" asp-controller="User">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-action="Login" asp-controller="User">Login</a>
    </li>
}
</ul>
